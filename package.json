{
  "name": "matlab-comment-checker",
  "description": "A variable comment chekcer for matlab.",
  "displayName": "Matlab Comment Checker",
  "author": "shengdi",
  "license": "MIT",
  "version": "1.0.30",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/378978764/matlab-comment-check/"
  },
  "publisher": "shengdi",
  "categories": [],
  "keywords": [
    "matlab"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:matlab"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "matlabCommentCheck.updateVariables",
        "title": "更新核心变量"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == matlab",
          "command": "matlabCommentCheck.updateVariables",
          "group": "1_modification"
        }
      ]
    },
    "snippets": [
      {
        "language": "matlab",
        "path": "./snippets/matlab.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./ --skipLibCheck",
    "test-watch": "tsc -watch -p ./ --skipLibCheck",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2",
    "vscode": "^1.1.37",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "chardet": "^1.3.0",
    "iconv-lite": "^0.6.2"
  }
}
